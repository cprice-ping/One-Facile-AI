# PingOne Environment Configuration
# Copy this file to .env and fill in your values

# Required: Your PingOne environment ID (UUID)
PINGONE_ENVIRONMENT_ID=

# Required: Your OAuth 2.0 authorization code client ID
PINGONE_CLIENT_ID=

# Optional: Defaults shown below
PINGONE_REGION_CODE=NA
PINGONE_TOP_LEVEL_DOMAIN=.com
PINGONE_AUTHORIZATION_CODE_SCOPES=openid

# Optional: Enable debug logging
# PINGONE_MCP_DEBUG=true

# Optional: Custom MCP server binary path
# MCP_SERVER_COMMAND=/path/to/pingone-mcp-server

# Optional: Server port
# PORT=8080
